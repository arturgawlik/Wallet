@model WalletWeb.ViewModels.AccessPage.LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_LayoutLoginView.cshtml";
}


<div class="container-fluid">
    <div class="login-wrapper row">
        <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
            <h1><a href="#" title="Login Page" tabindex="-1">Complete Admin</a></h1>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="All"></div>
                <p>
                    <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="input" size="20" />
                        <span asp-validation-for="Email"></span>
                </p>
                <p>
                    <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="input" size="20" />
                        <span asp-validation-for="Password"></span>
                </p>
                <p class="forgetmenot">
                    @*todo?*@
                    @*<label class="icheck-label form-label" for="rememberme"><input name="rememberme" type="checkbox" id="rememberme" value="forever" class="icheck-minimal-aero" checked> Remember me</label>*@
                    <label asp-for="RememberMe" class="icheck-label form-label"><input asp-for="RememberMe" class="icheck-minimal-aero"  checked> Remember Me</label>
                    
                    <span asp-validation-for="RememberMe"></span>
                </p>



                <p class="submit">
                    <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-accent btn-block" value="Sign In" />
                </p>
            </form>

            <p id="nav">
                @*todo*@
                @*<a class="pull-left" href="#" title="Password Lost and Found">Forgot password?</a>*@
                <a class="center" asp-action="Register" title="Sign Up">Sign Up</a>
            </p>


        </div>
    </div>
</div>





@section Styles {
<environment names="Development">
<link href="~/lib/icheck/skins/all.css" rel="stylesheet" type="text/css" media="screen"/>
</environment>
<environment names="Staging,Production">
<link href="~/lib/icheck/skins/all.css" rel="stylesheet" type="text/css" media="screen"/>
</environment>
}


@section Scripts {
<environment names="Development">
<script src="~/lib/icheck/icheck.min.js" type="text/javascript"></script>
</environment>
<environment names="Staging,Production">
<script src="~/lib/icheck/icheck.min.js" type="text/javascript"></script>
</environment>
}
