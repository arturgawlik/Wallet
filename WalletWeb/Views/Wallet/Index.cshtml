@model WalletWeb.ViewModels.Wallet.HomeWalletViewModel
@{
    ViewData["Title"] = "Your wallets";
}


<div class="col-lg-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Your wallets</h2>  
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover">
                        <thead>
                            @foreach(var property in Model.Wallets.GetType().GetProperties())
                            {
                                <th>@property.Name</th>
                            }
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles {
<environment names="Development">

</environment>
<environment names="Staging,Production">

</environment>
}