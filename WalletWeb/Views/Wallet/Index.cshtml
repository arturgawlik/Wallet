@model WalletWeb.ViewModels.Wallet.HomeWalletViewModel
@{
    ViewData["Title"] = "Your wallets";
}


<div class="col-lg-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Your wallets</h2>  
            <a asp-action="Add" class="btn btn-primary pull-right" style="margin-top: 25px;margin-bottom: 20px;margin-right: 25px;margin-left: 20px;">Add new</a>  
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-hover">
                        <thead>
                            <th>Name</th>
                            <th>State</th>
                        </thead>
                        <tbody>
                            @foreach (var wallet in Model.Wallets)
                            {
                                <tr>
                                    <th>@wallet.Name</th>
                                    <th>@wallet.State</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


